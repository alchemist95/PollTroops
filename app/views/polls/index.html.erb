<% content_for(:page_header) {"Participate!"} %>
<p id="notice"><%= notice %></p>

<% @polls.each do |poll| %>


<div class="list-group">
<li class="list-group-item"><%= poll.category %></li>
</div>

<div class="well">
<h2><%= poll.topic %></h2>

  <% if current_user %>
  <div class="btn-group">
        <%= link_to 'Participate!', poll_path(poll), class: 'btn btn-primary	' %>
        <% if current_user==poll.person %>
<%= link_to "Edit Poll", edit_poll_path(poll), class: "btn btn-default" %>
 <%= link_to 'Delete Poll', poll_path(poll),
                  method: :delete,
                  class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
        <% end %>


    </div>
      <% else %>
        Please sign in via <%= link_to 'Facebook', '/auth/facebook' %> to participate in this poll.
      <% end %>
    </p>









</div>

<% end %>

  



<br>
