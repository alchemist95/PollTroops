<!DOCTYPE html>
<html>
<head>
  <title>PT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<div class="navbar navbar-fixed">

	
<div class="container">
	<div class="navbar-header">
		<%= link_to "PollTroops", polls_path, class: "navbar-brand" %>
	</div>

<ul class="nav navbar-nav">
  <% if current_user %>
  <li><%= link_to 'Add poll', new_poll_path %></li>
  <% end %>
</ul>

<ul class="nav navbar-nav navbar-right">
  <% if current_user %>
    <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
    <li><%= link_to 'Logout', sign_out_path %></li>
  <% else %>
    <li><%= link_to 'Sign in', '/auth/facebook' %></li>
  <% end %>
</ul>

</div>
	</div>

<div class="page-header">
	<h1><%= yield :page_header %></h1>
</div>



<%= yield %>
</div>


</body>
</html>
